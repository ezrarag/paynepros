rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      // Allow admins to read all users (if needed)
      allow read: if isAuthenticated();
    }
    
    // Leads collection
    match /leads/{leadId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only server-side writes via API
    }
    
    // Wallets collection
    match /wallets/{walletId} {
      allow read, write: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
    }
    
    // Wallet transactions
    match /walletTransactions/{transactionId} {
      allow read: if isAuthenticated() && 
        resource.data.walletId != null &&
        exists(/databases/$(database)/documents/wallets/$(resource.data.walletId)) &&
        get(/databases/$(database)/documents/wallets/$(resource.data.walletId)).data.userId == request.auth.uid;
      allow write: if false; // Only server-side writes
    }
    
    // Content requests
    match /contentRequests/{requestId} {
      allow read, write: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

